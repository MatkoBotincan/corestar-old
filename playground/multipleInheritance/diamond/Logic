

// For class SMUSICIAN:

rule SM_S_forward_1:
 | SM(?x,{age=?a1;exm=?e1;pfm=?p1}) |- S(?x,{age=?a2;exm=?e2})
if
 S(?x,{age=?a1;exm=?e1}) | RestSMtoS(?x,{pfm=?p1}) |- !objsubtype(?x,"SMUSICIAN") * ?a1=?a2 * ?e1=?e2

rule SM_S_forward_2:
 | SM(?x,{age=?a1;exm=?e1;pfm=?p1}) |- RestSMtoS(?x,{pfm=?p2})
if
 RestSMtoS(?x,{pfm=?p1}) | S(?x,{age=?a1;exm=?e1}) |- !objsubtype(?x,"SMUSICIAN") * ?p1=?p2

